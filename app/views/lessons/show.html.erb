<h1><%= @lesson.category.title %></h1>
<p>Total correct answers are <%= @lesson.result %> of <%= @lesson.category.words.count %></p>


<div class="table-responsive-md">
  <table class="table table-hover">
    <thead>
        <tr>
        <th>Word</th>
        <th>Your answer</th>
        <th>Correct answer</th>
        <th>Result</th>
        </tr>
    </thead>

    <tbody>
        <% @answers.each do |answer| %>
            <tr>
                <td><%= answer.word.content %></td>
                <td><%= answer.choice.content %></td>
                <td><%= answer.word.correct_answer %></td>
                <td>
                    <div class="form-check">
                    <% if answer.choice.content == answer.word.correct_answer %>
                        <span class="c1"></span>
                    <% else %>
                        <span class="c2"></span>
                    <% end %>
                    </div>
                </td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>

<div class="apple_pagination">
    <%= will_paginate @answers %>
</div>