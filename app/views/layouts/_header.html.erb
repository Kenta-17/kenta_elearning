<header class="navbar navbar-expand-sm navbar-light bg-white mb-4">
    <div class="container">
        <%= link_to "Elerning System", root_path, class: "navbar-brand" %>

        <ul class="navbar-nav ml-auto">

        <% unless signed_in? %>
            <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "About", about_path, class: "nav-link" %>
            </li>
        <% end %>

        <% if signed_in? %>
            <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Users", users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Lessons", '#', class: "nav-link" %>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbar-dropdown" data-toggle="dropdown" >
                    <%= current_user.name %>
                </a>
                <div class="dropdown-menu">
                    <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
                    <%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %>
                    <%= link_to "Logout", signout_path, method: :delete, class: "dropdown-item" %>
                </div>
            </li>
        <% else %>
            <li class="nav-item">
                <%= link_to "Sign up", signup_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Sign in", signin_path, class: "nav-link" %>
            </li>
        <% end %>
        </ul>
    </div>
</header>