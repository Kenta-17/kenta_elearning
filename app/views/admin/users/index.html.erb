<h4 class="ml-3">Users</h4>
<br>

<div class="container">
    <% @users.each do |user| %>
        <div class="row">
            <div class="col-md-3">
                <% if user.image? %>
                     <p><%= image_tag user.image.thumb.url %></p>
                <% else %>
                    <p><%= image_tag("default.jpg", :size => "50x50") %></p>
                <% end %>
            </div>
            <div class="col-md-3">
                <%= user.name %>
            </div>
            <div class="col-md-3">
                <%= user.email %>
            </div>
            <div class="col-md-3">
                <% if user.admin? %>
                    <%= link_to "Remove", admin_user_path(user), method: :delete, class: "btn btn-sm btn-success" %>
                <% else %>
                    <%= link_to "Add", admin_user_path(user), method: :patch, class: "btn btn-sm btn-secondary" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div class="apple_pagination">
    <%= will_paginate %>
</div>

