<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="container">
            <h1 class="text-center">Create category</h1>
            <br>

            <%= form_for [:admin, @category] do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-group">
                    <%= f.text_field :title, placeholder: "Title", class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.text_field :description, placeholder: "Description", class: "form-control mb-4" %>
                </div>

                <%= f.submit "Create", class: "btn btn-block btn-info" %>
            <% end %>
            <div class="text-center">
                <%= link_to "Back", admin_categories_path, class: "btn btn-link" %>
            </div>
        </div>
    </div>
</div>

