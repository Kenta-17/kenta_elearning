<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="container">
            <h1 class="text-center">Create category</h1>

            <%= form_for @category, url: admin_categories_path do |f| %>
                <%= render 'shared/error_messages_category' %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_field :description, class: "form-control mb-4" %>
                </div>

                <%= f.submit "Create an category", class: "btn btn-block btn-info" %>
            <% end %>
        </div>
    </div>
</div>