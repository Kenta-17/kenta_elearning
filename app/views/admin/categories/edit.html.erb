<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="container">
                <h1 class="text-center">Edit category</h1>

                <%= form_for @category, url: admin_category_path, html: {method: "patch"} do |f| %>
                    <div class="form-group">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: "form-control mb-4" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :description %>
                        <%= f.text_field :description, class: "form-control mb-4" %>
                    </div>

                    <%= f.submit "Save", class: "btn btn-block btn-info" %>
                <% end %>
                <div class="text-center">
                    <%= link_to "Back", admin_categories_path, class: "btn btn-link" %>
                </div>
            </div>
        </div>
    </div>
</div>