<% provide(:title, 'Users') %>

<h1 class="text-center">All users</h1>

    <div class="container">
            <% @users.each do |user| %>
                <div class="row">
                    <div class="col-mg-8">
                        <div class="row">
                            <div class="col">
                                <% if user.image? %>
                                    <p><%= image_tag user.image.thumb.url %></p>
                                <% else %>
                                    <p><%= image_tag("default.jpg", :size => "50x50") %></p>
                                <% end %>
                            </div>
                            <div class="col pl-1 pt-2">
                                <%= link_to user.name, user_path(user) %>
                            </div>
                        </div>
                    </div>

                    <div class="col-mg-4"></div>

                </div>
            <% end %>
    </div>

    <div class="apple_pagination">
        <%= will_paginate %>
    </div>


