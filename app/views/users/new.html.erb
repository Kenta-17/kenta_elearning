<% provide(:title, 'Sign Up') %>

<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="container">
            <h1 class="text-center">Sign up</h1>
            <br>

            <%= form_for @user do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-group">
                    <%= f.text_field :name, placeholder: "Name", class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password", class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: "Password", class: "form-control mb-4" %>
                </div>

                <%= f.submit "Sign up", class: "btn btn-block btn-info" %>
            <% end %>
        </div>
    </div>
</div>