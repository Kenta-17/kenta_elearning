<% provide(:title, @user.name) %>

<div class="center jumbotron bg-white">
    <div class="text-center"><%= image_tag @user.image.to_s %></div>
    <br>
    <h1 class="text-center"><%= @user.name %></h1>
    <h5 class="text-center"><%= @user.email %></h5>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-8">
            <div class="media">
                <div class="media-body ml-3">
                    <h1><%= @user.name %></h1>
                    <p><%= @user.email %></p>
                    <small>Follow</small>
                    <small>Unfollow</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="row">
                <div class="col">
                    <h3>
                    </h3>
                    following
                </div>
                <div class="col">
                    <h3>
                    </h3>
                    followers
                </div>
            </div>
        </div>
    </div>
</div>


