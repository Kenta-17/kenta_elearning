<% provide(:title, 'Sign in') %>

<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="container">
            <h1 class="text-center">Sign in</h1>
            <br>

            <%= form_for(:session, url: signin_path) do |f| %>

                <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control mb-4" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password",  class: "form-control mb-4" %>
                </div>

                <%= f.submit "Log in", class: "btn btn-block btn-info" %>
            <% end %>
        </div>
    </div>
</div>

