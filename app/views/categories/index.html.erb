<% provide(:title, 'Lessons') %>

<h1 class="text-center">Lessons</h1>
<br>

<div class="container">
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-lg-6">
                <div class="card text-left">

                <div class="card-header">
                    <div class="row">
                        <div class="col-md-9">
                            <h4 class="card-title"><%= category.title %></h4>
                        </div>
                        <div class="col-md-3 text-right">
                            <p><%= category.active_words.count %> words</p>
                        </div>
                    </div>
                </div>

    

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <p class="card-text"><%= category.description %></p>
                            </div>
                            <div class="col-md-3 text-right">
                                <% lesson = current_user.lesson_taken(category.id) %>
                                <% if lesson.nil? %>
                                    <p><%= link_to "Start Lesson", lessons_path(category_id: category.id), method: :post, class: "btn btn-sm btn-outline-info"%></p>
                                <% else %>
                                    <p><%= link_to "Show result", lesson_path(lesson.id), class: "btn btn-sm btn-outline-danger" %></p>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="apple_pagination">
    <%= will_paginate %>
</div>