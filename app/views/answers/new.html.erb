<div class="container">
    <div class="row">
        <div class="col-md-7 mx-auto">
            
                <div class="row">
                    <div class="col-md-9">
                        <h2><%= @category.title %></h2>
                    </div>
                    <div class="col-md-3 my-auto text-right">
                        <%= @lesson.words.count + 1 %> of <%= @category.words.count %>
                    </div>
                </div>

