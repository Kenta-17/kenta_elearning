                                <%= f.hidden_field :word_id, value: choice.word_id %>
                            </div>
                            <div class="form-group">
                                <%= f.hidden_field :choice_id, value: choice. id %>
                            </div>
                            <div class="form-group mb-2">
                                <%= f.submit choice.content, class: "btn btn-outline-info w-50" %>
